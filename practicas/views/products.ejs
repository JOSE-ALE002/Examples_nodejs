<%- include('partials/head.ejs'); %>
    <h1>Products</h1>
    <ul>
        <% items.forEach(element => {%>
            <li><%= `${element.id} - ${element.name}` %></li>
        <% }) %>
    </ul>

    <h3>Add a new Product</h3>
    <form action="/new_product" method="POST">
        <input type="text" name="productName" id="item">
        <button>Add</button>
    </form>

    <script>
        let product = document.getElementById('item');
        product.focus();
    </script>
